<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brandon_medium"
        android:text="Update Pesanan"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/txt_title_small"
        android:layout_below="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status saat ini :"
        android:textSize="22sp"
        android:fontFamily="@font/brandon_medium"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/txt_status"
        android:layout_below="@+id/txt_title_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menunggu Konfirmasi Toko"
        android:textSize="22sp"
        android:fontFamily="@font/brandon_medium"
        android:textColor="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/rdi_group"
        android:layout_below="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdi_proses_pembayaran"
            android:text="Menunggu proses pembayaran"
            android:textSize="22sp"
            android:checked="true"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rdi_konfirmasi_toko"
            android:text="Menunggu konfirmasi toko"
            android:textSize="22sp"
            android:checked="true"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rdi_dikemas"
            android:text="Produk sedang dikemas"
            android:textSize="22sp"
            android:checked="true"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rdi_dikirim"
            android:text="Produk dikirim"
            android:textSize="22sp"
            android:checked="true"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rdi_selesai"
            android:text="Pesanan Selesai"
            android:textSize="22sp"
            android:checked="true"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rdi_cancelled"
            android:text="Batalkan"
            android:textSize="22sp"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="@font/brandon_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_below="@+id/rdi_group"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/btn_cancel"
            android:text="Batal"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/transparent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/btn_ok"
            android:text="OK"
            android:textColor="@android:color/holo_red_dark"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>